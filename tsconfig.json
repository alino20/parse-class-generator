{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
  },
  
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
